<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_invitation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@android:color/transparent"
    app:cardBackgroundColor="?attr/colorSurface"
    tools:cardBackgroundColor="#121826">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="92dp"
        android:padding="12dp">

        <!-- Poster thumbnail -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_poster"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/content_desc_event_poster"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.App.Small" />

        <!-- Text content -->
        <LinearLayout
            android:id="@+id/container_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/image_poster"
            app:layout_constraintEnd_toStartOf="@id/container_actions"
            app:layout_constraintStart_toEndOf="@id/image_poster"
            app:layout_constraintTop_toTopOf="@id/image_poster">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Title"
                tools:textColor="@color/black" />

            <TextView
                android:id="@+id/text_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"
                tools:text="Date Â· Time"
                tools:textColor="@color/black" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"
                tools:text="Location"
                tools:textColor="@color/black" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:text="Description"
                tools:textColor="@color/black" />
        </LinearLayout>

        <!-- Accept / Decline vertical buttons -->
        <LinearLayout
            android:id="@+id/container_actions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_accept"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_accept_circle"
                android:contentDescription="@string/content_desc_accept_invitation"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_check"
                app:tint="@color/inv_green_outline"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"/>

            <ImageButton
                android:id="@+id/btn_decline"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_decline_circle"
                android:contentDescription="@string/content_desc_decline_invitation"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/inv_red_outline"
                app:backgroundTint="@null" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>