<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_invitation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_white"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Event Image -->
    <ImageView
        android:id="@+id/image_poster"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music"
        android:layout_marginEnd="12dp"
        android:clipToOutline="true"
        android:background="@drawable/rounded_image"
        android:contentDescription="@string/content_desc_event_poster" />

    <!-- Event Info Column -->
    <LinearLayout
        android:id="@+id/container_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/text_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date - Time"
            android:textColor="#444444"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#444444"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#444444"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Accept/Decline Buttons -->
    <LinearLayout
        android:id="@+id/container_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_accept"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_green"
            android:src="@drawable/ic_check"
            android:tint="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:contentDescription="Accept Invitation"/>

        <ImageButton
            android:id="@+id/button_decline"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_close"
            android:tint="#FFFFFF"
            android:contentDescription="Decline Invitation"/>
    </LinearLayout>

</LinearLayout>
