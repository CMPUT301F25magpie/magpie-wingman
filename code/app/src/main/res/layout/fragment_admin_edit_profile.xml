<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B18"
    tools:context=".admin.AdminEditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:paddingHorizontal="12dp">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#000000" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/wingman_logo"
                android:contentDescription="Logo"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- FORM FIELDS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/edit_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_white"
                android:hint="First Name"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/edit_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_white"
                android:hint="Last Name"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textPersonName"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_white"
            android:hint="Email"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/edit_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_white"
            android:hint="DD/MM/YYYY"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:drawableEnd="@drawable/ic_calendar"
            android:inputType="date"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_white"
            android:hint="Edit Phone Number"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_white"
            android:hint="Edit Password"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="textPassword" />

        <!-- Update Button -->
        <Button
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:text="Update"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_button_bg"
            android:backgroundTint="@null"/>
    </LinearLayout>
</ScrollView>