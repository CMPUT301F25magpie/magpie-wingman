<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".ui.login.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/wingman_logo"
            android:contentDescription="@string/app_name" />

        <!-- Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Get Started now"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Already Have Account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/alreadyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="#808080"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="#2E5BFF"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Name Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_input_light"
                android:paddingStart="16dp"
                android:textColorHint="#808080"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_input_light"
                android:paddingStart="16dp"
                android:textColorHint="#808080"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_input_light"
            android:paddingStart="16dp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <!-- Date of Birth -->
        <EditText
            android:id="@+id/dateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="DD/MM/YYYY"
            android:inputType="date"
            android:background="@drawable/rounded_input_light"
            android:paddingStart="16dp"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="12dp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="+1 (123) 456-7890"
            android:inputType="phone"
            android:background="@drawable/rounded_input_light"
            android:paddingStart="16dp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Set Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_input_light"
            android:paddingStart="16dp"
            android:textColorHint="#808080"
            android:textColor="#000000" />


        <!-- Register -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_bg" />

    </LinearLayout>
</ScrollView>
