<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0B18"
    tools:context=".entrant.EntrantDetailsFragment">

    <!-- HEADER BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/button_info"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_info"
            android:contentDescription="Logo"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#151526"
            android:padding="16dp"
            android:clipToOutline="true"
            android:backgroundTintMode="src_over"
            android:backgroundTint="#151526"
            android:elevation="2dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_event_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joining waitlist will allow user to be chosen during lottery selection (random selection). Once selected (user will receive notification) and have the event moved into their invitations. User can then join the event, moving them into the selected entrants list."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
