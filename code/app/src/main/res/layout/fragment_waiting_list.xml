<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B1A"
    tools:context=".organizer.WaitingListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_waitlist"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/waitlist_title"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:titleTextColor="@android:color/white"
            android:background="#0B0B1A" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:id="@+id/waitlist_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/waitlist_empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waitlist_empty_message"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_waitlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:dividerHeight="1dp"
            android:divider="?android:attr/listDivider"
            android:clipToPadding="false" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>