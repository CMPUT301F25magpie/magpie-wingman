<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rounded_white"
    android:gravity="center_vertical">

    <!-- Event Image -->
    <ImageView
        android:id="@+id/image_event_poster"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Event Poster"
        android:layout_marginEnd="10dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.MediumComponent" />

    <!-- Event Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_event_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date - Time"
            android:textSize="13sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/text_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="13sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/text_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_event_waitlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="waiting list: XX"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Red X Button -->
    <ImageButton
        android:id="@+id/button_remove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:tint="#FF3B30"
        android:background="@drawable/bg_remove_circle"
        android:contentDescription="Remove Event" />
</LinearLayout>
