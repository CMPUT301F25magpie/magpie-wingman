<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B18"
    tools:context=".organizer.OrganizerEventDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:paddingHorizontal="12dp">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                app:tint="#000000" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/wingman_logo"
                android:contentDescription="Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Event Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- EVENT SUMMARY CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_event_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date - Time"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: Lorem ipsum dolor sit amet..."
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_qr"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_qr_code"
                    android:contentDescription="QR Code"
                    android:tint="#000000"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:id="@+id/image_event_poster"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"
                    android:contentDescription="Poster"/>
            </LinearLayout>
        </LinearLayout>

        <!-- BLUE NAVIGATION BUTTONS -->
        <Button
            android:id="@+id/btn_waiting_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting List"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3A5BFF"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_selected_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Entrants List"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3A5BFF"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_accepted_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted List"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3A5BFF"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_cancelled_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelled List"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3A5BFF"
            android:layout_marginTop="8dp"/>

        <!-- LOTTERY / NOTIFY / FINALIZE ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_lottery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lottery"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3A5BFF"/>

            <Button
                android:id="@+id/btn_notify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notify"
                android:textColor="#000000"
                android:backgroundTint="#FFD600"
                android:layout_marginHorizontal="8dp"/>

            <Button
                android:id="@+id/btn_finalize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finalize"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3A5BFF"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
