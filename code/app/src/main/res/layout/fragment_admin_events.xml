<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0B18"
    tools:context=".admin.AdminEventsFragment">

    <!-- Header Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="8dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            app:tint="#000000" />

        <!-- Wingman Logo -->
        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/wingman_logo"
            android:contentDescription="Wingman Logo" />

        <!-- Search Bar -->
        <TextView
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:text="Scroll To Search Events"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:background="@drawable/search_box_bg"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="6dp"
            android:inputType="text" />

        <!-- Filter Icon -->
        <ImageButton
            android:id="@+id/button_filter"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_filter"
            android:background="@android:color/transparent"
            android:contentDescription="Filter"
            app:tint="#000000" />
    </LinearLayout>

    <!-- Event List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_admin_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        tools:listitem="@layout/list_item_admin_event" />
</LinearLayout>

