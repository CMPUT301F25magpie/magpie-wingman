<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0B18"
    tools:context=".organizer.AcceptedListFragment">

    <!-- HEADER BAR -->
    <LinearLayout
        android:id="@+id/toolbar_accepted"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#000000" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/wingman_logo"
            android:contentDescription="Logo"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signed-up Entrants"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- PROGRESS + EMPTY STATE -->
    <ProgressBar
        android:id="@+id/accepted_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/accepted_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No entrants have signed up yet."
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"/>

    <!-- ACTUAL LIST (driven by AcceptedListFragment + adapter) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_accepted"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_waiting_person"
        android:visibility="gone" />

</LinearLayout>
