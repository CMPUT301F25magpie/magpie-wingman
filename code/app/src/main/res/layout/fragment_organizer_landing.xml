<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0B18"
    tools:context=".organizer.OrganizerLandingFragment">

    <!-- HEADER BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/wingman_logo"
            android:contentDescription="Wingman Logo" />

        <EditText
            android:id="@+id/search_my_events"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Search My Events"
            android:background="@drawable/search_box_bg"
            android:paddingStart="40dp"
            android:drawableStart="@drawable/ic_search"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:contentDescription="Settings"
            app:tint="#000000" />
    </LinearLayout>

    <!-- ORGANIZER EVENT LIST (from Firebase) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_organizer_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        tools:listitem="@layout/list_organizer_event_item" />

    <!-- NEW EVENT BUTTON -->
    <Button
        android:id="@+id/button_new_event"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:text="New Event"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/blue_button_bg"
        android:backgroundTint="@null" />

</LinearLayout>
