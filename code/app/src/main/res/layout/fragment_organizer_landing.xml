<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0B18"
    tools:context=".organizer.OrganizerLandingFragment">

    <!-- HEADER BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/wingman_logo"
            android:contentDescription="Wingman Logo" />

        <EditText
            android:id="@+id/search_my_events"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Search My Events"
            android:background="@drawable/search_box_bg"
            android:paddingStart="40dp"
            android:drawableStart="@drawable/ic_search"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:singleLine="true"/>

        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:tint="#000000"
            android:contentDescription="Settings" />
    </LinearLayout>

    <!-- EVENT LIST -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/organizer_event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sample Event Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_white"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_event"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"/>

                <!-- Event Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date - Time"
                        android:textColor="#444444"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="#444444"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_event_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#444444"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Menu and Edit Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/button_menu"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/circle_white"
                        android:src="@drawable/ic_more"
                        android:tint="#000000"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="More Options"/>

                    <ImageButton
                        android:id="@+id/button_edit"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/circle_yellow"
                        android:src="@drawable/ic_edit"
                        android:tint="#FFFFFF"
                        android:contentDescription="Edit Event"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- NEW EVENT BUTTON -->
    <Button
        android:id="@+id/button_new_event"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:text="New Event"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/blue_button_bg"
        android:backgroundTint="@null"/>
</LinearLayout>
